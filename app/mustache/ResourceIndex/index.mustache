<div role="main" class="color-scheme-text list-view">

    <section>
        <h1>
          Recently on the OER World Map
        </h1>
        <ul class="resource-list" data-behaviour="linkedListEntries">
            <script type="application/ld+json">
                {{{scope.stories}}}
            </script>
            {{#scope.stories}}
                <li>
                    <article>
                      <div class="placeholder" style="width: 100px; height: 100px;"></div>
                      <h1>
                        <a href="/resource/{{@id}}">
                          {{#name}}{{@value}}{{/name}}
                        </a>
                      </h1>
                      <strong>Contributed by</strong>
                      <ul class="csl">
                        {{#creator}}
                          <li>{{#legalName}}{{@value}}{{/legalName}}{{^legalName}}{{name}}{{/legalName}}</li>
                        {{/creator}}
                      </ul>
                      {{#articleBody}}{{{@value}}}{{/articleBody}}
                    </article>
                </li>
            {{/scope.stories}}
        </ul>
    </section>

</div>
