<div role="main" class="color-scheme-text list-view">

    <section>
        <h1>
          Recently on the OER World Map
        </h1>
        <ul class="resource-list" data-behaviour="linkedListEntries">
            <script type="application/ld+json">
                {{{scope.resources}}}
            </script>
            {{#scope.resources}}
                <li>
                    {{#?Article}}
                    <article>
                      <div class="placeholder" style="width: 100px; height: 100px;"></div>
                      <h1>
                        <a href="/resource/{{@id}}">
                          {{#name}}{{@value}}{{/name}}
                        </a>
                      </h1>
                      <strong>Contributed by</strong>
                      <ul class="csl">
                        {{#creator}}
                          <li>{{#isOrganization}}{{#legalName}}{{@value}}{{/legalName}}{{/isOrganization}}{{#isPerson}}{{name}}{{/isPerson}}</li>
                        {{/creator}}
                      </ul>
                      {{#articleBody}}{{{@value}}}{{/articleBody}}
                    </article>
                    {{/?Article}}
                    {{#?Organization}}
                    <div>
                        <h1>
                            <a href="/resource/{{@id}}">
                              {{#legalName}}{{@value}}{{/legalName}}
                            </a>
                        </h1>
                    </div>
                    {{/?Organization}}
                    {{#?Person}}
                        <div>
                            <h1>
                                <a href="/resource/{{@id}}">
                                  {{mbox_sha1sum}}
                                </a>
                            </h1>
                        </div>
                    {{/?Person}}
                </li>
            {{/scope.resources}}
        </ul>
    </section>

</div>
