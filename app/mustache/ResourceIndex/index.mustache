<div role="main">
    <section>
        <ul class="resource-list">
            <script type="application/ld+json">
                {{{scope.stories}}}
            </script>
            {{#scope.stories}}
                <li>
                    <article class="resource-story">
                        <header>
                            <h1><a class="hijax" target="_parent" role="main" href="/resource/{{@id}}">{{#name}}{{@value}}{{/name}}</a></h1>
                            {{#agent}}
                                <address>
                                    Contributed by <a href="mailto:{{email}}">{{#legalName}}{{@value}}{{/legalName}}{{#name}}{{name}}{{/name}}</a>
                                </address>
                            {{/agent}}
                        </header>
                        {{#image}}<img src="{{image}}" />{{/image}}
                        {{#description}}{{{@value}}}{{/description}}
                    </article>
                </li>
            {{/scope.stories}}
        </ul>
    </section>

</div>
