<div role="main" class="color-scheme-text list-view">
    
    <section>
        <h1>
          We got told some stories ...
        </h1>
        <ul class="resource-list" data-behaviour="linkedListEntries">
            <script type="application/ld+json">
                {{{scope.stories}}}
            </script>
            {{#scope.stories}}
                <li>
                    <article>
                      <div class="placeholder" style="width: 100px; height: 100px;"></div>
                      <h1>
                        <a class="hijax" target="_parent" role="main" href="/resource/{{@id}}">
                          {{#name}}{{@value}}{{/name}}
                        </a>
                      </h1>
                      <p>
                        <strong>Contributed by</strong> {{#creator}}{{name}}{{/creator}}
                      </p>
                      {{#articleBody}}{{{@value}}}{{/articleBody}}
                    </a>
                </li>
            {{/scope.stories}}
        </ul>
    </section>

</div>
