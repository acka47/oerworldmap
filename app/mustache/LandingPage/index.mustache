<main class="center">

    <h1>{{i18n.landingpage_title}}</h1>
    <h2>Join us in mapping the world of OER!</h2>

    <section>
        <div id="worldmap"></div>
        <table class="table" about="#users-by-country">
            <script type="application/ld+json">
                {{{scope.countryAggregation}}}
            </script>
          {{#scope.countryAggregation.entries}}
              <tr><td>{{key}}</td><td>{{value}}</td></tr>
          {{/scope.countryAggregation.entries}}
        </table>
    </section>

    <section id="user-register">
        <a href="/user/" class="hijax transclude" target="_self">{{i18n.register}}</a>
    </section>

    <a href="/resource/" class="hijax transclude" target="_parent">{{i18n.resource_list}}</a>

</main>

<footer>
</footer>

<script type="text/javascript" src="/assets/javascripts/main.js"></script>
