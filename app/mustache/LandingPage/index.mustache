<div class="container">

    <h1>
    	{{i18n.landingpage_title}}
    	<nav class="social">
	    	<a href="https://www.facebook.com/oerworldmap" target="_blank"><i class="fa fa-facebook-official"></i></a>
        <a href="https://twitter.com/oerworldmap" target="_blank"><i class="fa fa-twitter"></i></a>
		</nav>
    </h1>

    <h2>{{{i18n.landingpage_intro}}}</h2>
    <div class="section">
        <div id="worldmap" style="width: 800px; height: 500px"></div>
        <table class="table" about="#users-by-country">
            <script type="application/ld+json">
                {{{countryAggregation}}}
            </script>
            {{#countryAggregation.entries}}
            <tr><td>{{key}}</td><td>{{value}}</td></tr>
            {{/countryAggregation.entries}}
        </table>
    </div>

    <div class="section" id="user-register">
        <div class="register">
            <a href="/user/" class="hijax transclude">{{i18n.register}}</a>
        </div>
    </div>

    <hr />

    <div class="section" id="about">
        <h2>{{i18n.landingpage_about_title}}</h2>
        <p>{{{i18n.landingpage_about_text}}}</p>
        <div class="row">
            <div class="col-md-6">
                {{{i18n.landingpage_about_description_text}}}
            </div>
            <div class="col-md-6">
                {{{i18n.landingpage_about_benefits_text}}}
            </div>
        </div>
    </div>

    <hr />

    <div class="section">
        <h2>
            {{i18n.landingpage_country_champions_title}}
        </h2>
        <p>
            {{{i18n.landingpage_country_champions_intro}}}
        </p>
    </div>

    <hr />

    <div class="section" id="blog">
      <h2>
          {{i18n.landingpage_blog_title}}
      </h2>
      <div class="blank-line-above" id="blog-link">
        <a href="https://oerworldmap.wordpress.com" class="btn btn-lg btn-transparent" target="_blank">
          <i class="fa fa-lg fa-fw fa-wordpress"></i>
          {{i18n.landingpage_blog_visit_link}}
        </a>
      </div>
    </div>

    <hr />

    <div class="section" id="privacy">
        <h2>
            {{i18n.landingpage_privacy_title}}
        </h2>
        {{{i18n.landingpage_privacy_website}}}
        {{{i18n.landingpage_privacy_html}}}
    </div>

    <hr />

    <div class="section" id="imprint">
        <h2>
            {{i18n.landingpage_imprint_title}}
        </h2>
        {{{i18n.landingpage_imprint_text}}}
    </div>

</div>
<script type="text/javascript" src="/assets/javascripts/main.js"></script>
