<div role="main" class="color-scheme-map" data-view="map">

    <h1>{{i18n.landingpage_title}}</h1>
    <h2>Join us in mapping the world of OER!</h2>
    
    <div class="call-for-actions">
      <div class="call-for-actions-table">
        <div class="call-for-actions-row">
          <a href="/contribute" class="call-for-action">Share<br>your<br>Story</a>
        </div>
      </div>
      <div class="call-for-actions-table">
        <div class="call-for-actions-row">
          <a href="#user-register" class="call-for-action">Register for News&shy;letter</a>
        </div>
      </div>
      <section id="user-register" class="map-view-hidden">
        <a href="/user/" class="hijax transclude" target="_self">{{i18n.register}}</a>
      </section>
    </div>
        
    <section class="map-view-hidden">
        <table class="table" about="#users-by-country">
            <script type="application/ld+json">
                {{{scope.countryAggregation}}}
            </script>
          {{#scope.countryAggregation.entries}}
              <tr><td>{{key}}</td><td>{{value}}</td></tr>
          {{/scope.countryAggregation.entries}}
        </table>
    </section>

    <a href="/resource/" class="hijax transclude map-view-hidden" target="_blank">{{i18n.resource_list}}</a>

</div>

<footer>
</footer>

<script type="text/javascript" src="//d3js.org/d3.v3.min.js"></script>
<script type="text/javascript" src="//d3js.org/d3.geo.projection.v0.min.js"></script>
<script type="text/javascript" src="//cdn.rawgit.com/mbostock/topojson/master/topojson.js"></script>

<script type="text/javascript" src="/assets/javascripts/main.js"></script>
