<main>

    <h1>{{i18n.landingpage_title}}</h1>
    <h2>Mapping the world of OER since 2015!</h2>

    <div class="call-for-action">Share your story</div>
    <div class="call-for-action">Register for our Newsletter</div>

    <section>
        <div id="worldmap" style="width: 800px; height: 500px"></div>
        <table class="table" about="#users-by-country">
            <script type="application/ld+json">
                {{{scope}}}
            </script>
            {{#scope.entries}}
            <tr><td>{{key}}</td><td>{{value}}</td></tr>
            {{/scope.entries}}
        </table>
    </section>
    
    <section id="user-register">
        <a href="/user/" class="hijax transclude">{{i18n.register}}</a>
    </section>
    
</main>

