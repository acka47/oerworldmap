{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://www.oerworldmap.com/json/schema/location.json#",
    "description": "An location description consisting of an address and/or geo data",
    "type": "object",
    "properties": {
        "geo": { "$ref": "http://www.oerworldmap.com/assets/json/schema/geo.json"},
        "address": { "$ref": "http://www.oerworldmap.com/assets/json/schema/address.json"}
    },
    "required": ["geo", "address"]
}